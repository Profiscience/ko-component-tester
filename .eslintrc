{
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "arrow-parens": [2, "always"],
    "arrow-spacing": 2,
    "no-console": 1,
    "no-const-assign": 2,
    "no-debugger": 1,
    "no-var": 2,
    "prefer-arrow-callback": 2,
    "prefer-const": 2,
    "semi": [2, "never"],
    "space-before-function-paren": [2, "never"]
  }
}
